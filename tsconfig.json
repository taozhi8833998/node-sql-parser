{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "ts-auto-guard": {
    "export-guards": true,
    "guard-name": "is%s",
    "path-mode": "relative"
  },
  "include": ["types.d.ts"],
  "exclude": ["node_modules", "test", "lib", "build"]
}
